    <script>
        {
            function show() {
                let a = document.getElementById("t1").value
               
                let num = a
                let n, m, rev = 0
                while (a >0) {
                    n = a % 10
                    rev = (rev * 10) + n
                    a = Math.floor(a / 10)
                }
                console.log(rev)
                if (num == rev) {
                    m = "this is palindrome"
                } else {
                    m = "this is not palindrome"
                }
                let s = document.getElementById("display")
                s.innerHTML = m
            }
        }
    </script>
